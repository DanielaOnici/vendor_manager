@model Vendor

@{
    ViewData["Title"] = "Add a Vendor";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Vendor" asp-action="AddNewVendor" asp-route-lowerbound="a" asp-route-upperbound="e" method="post" enctype="application/x-www-form-urlencoded">

    <partial name="_VendorDetails" />

    <button type="submit" class="btn btn-primary mt-1">Add</button>
    <a asp-controller="Vendor" asp-action="GetVendorsByGroup" asp-route-lowerbound="a" asp-route-upperbound="e" class="btn btn-primary mt-1">Cancel</a>
</form>